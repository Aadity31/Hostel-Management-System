<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.views.users.admin.AllStudents">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <!-- Student Details Table Section -->
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #202835;" text="Student Details" />
                        <Separator />
                        <TableView fx:id="studentTable" prefHeight="350.0">
                            <columns>
                                <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Name" />
                                <TableColumn fx:id="addressColumn" prefWidth="150.0" text="Address" />
                                <TableColumn fx:id="genderColumn" prefWidth="80.0" text="Gender" />
                                <TableColumn fx:id="guardianColumn" prefWidth="120.0" text="Guardian" />
                                <TableColumn fx:id="studentIdColumn" prefWidth="100.0" text="Student ID" />
                                <TableColumn fx:id="studyYearColumn" prefWidth="100.0" text="Study Year" />
                                <TableColumn fx:id="nicColumn" prefWidth="120.0" text="NIC/Passport" />
                                <TableColumn fx:id="contactColumn" prefWidth="120.0" text="Contact No" />
                                <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                                <TableColumn fx:id="emergencyContactColumn" prefWidth="120.0" text="Emg Contact" />
                                <TableColumn fx:id="programmeColumn" prefWidth="150.0" text="Study Programme" />
                                <TableColumn fx:id="roomColumn" prefWidth="100.0" text="Room No" />
                            </columns>
                        </TableView>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </VBox>

                <!-- Search Section -->
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #202835;" text="Search" />
                        <Separator />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 15px; -fx-text-fill: #202835;" text="Student ID:" />
                                <TextField fx:id="searchTextField" prefWidth="750.0" promptText="Type here to search" />
                                <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleReset" prefWidth="102.0" text="Reset" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>

                <!-- Export Buttons Section -->
                <VBox spacing="5.0">
                    <children>
                        <Separator />
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="pdfButton" mnemonicParsing="false" onAction="#handleExportPdf" prefWidth="140.0" text="Export as PDF" />
                                <Button fx:id="excelButton" mnemonicParsing="false" onAction="#handleExportExcel" prefWidth="150.0" text="Export to Excel" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>