<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.views.users.student.Fees">
    <children>
        <VBox prefHeight="600.0" prefWidth="1050.0" spacing="10.0" style="-fx-background-color: #fbfbfb;">
            <children>
                <!-- Add Fees Section -->
                <TitledPane collapsible="false" prefHeight="220.0" text="Add Fees">
                    <content>
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="290.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="290.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                            </rowConstraints>

                            <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <font>
                                    <Font name="Tahoma" size="15.0" />
                                </font>
                            </Label>
                            <TextField fx:id="txtstuid" promptText="No need to add. System automatic generated." GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Month:" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                <font>
                                    <Font name="Tahoma" size="15.0" />
                                </font>
                            </Label>
                            <ComboBox fx:id="txtmonth" prefWidth="290.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <font>
                                    <Font name="Tahoma" size="15.0" />
                                </font>
                            </Label>
                            <TextField fx:id="txtname" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Invoice No:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                <font>
                                    <Font name="Tahoma" size="15.0" />
                                </font>
                            </Label>
                            <TextField fx:id="txtinvoice" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                            <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <font>
                                    <Font name="Tahoma" size="15.0" />
                                </font>
                            </Label>
                            <DatePicker fx:id="add_date" prefWidth="290.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="Amount:" GridPane.columnIndex="2" GridPane.rowIndex="2">
                                <font>
                                    <Font name="Tahoma" size="15.0" />
                                </font>
                            </Label>
                            <TextField fx:id="txtamount" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                            <!-- Buttons -->
                            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                <Button fx:id="add_btn" mnemonicParsing="false" onAction="#addRecord" prefHeight="38.0" prefWidth="100.0" text="Add Record" />
                                <Button fx:id="clear_btn" mnemonicParsing="false" onAction="#clearFields" prefHeight="38.0" prefWidth="100.0" text="Clear" />
                            </HBox>
                        </GridPane>
                    </content>
                    <font>
                        <Font name="Tahoma" size="18.0" />
                    </font>
                </TitledPane>

                <!-- Payment Details Section -->
                <TitledPane collapsible="false" prefHeight="350.0" text="Payment Details">
                    <content>
                        <VBox spacing="10.0">
                            <!-- Search and Export Controls -->
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="Search by Month:">
                                    <font>
                                        <Font name="Tahoma" size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txt_search" onKeyReleased="#searchByMonth" prefWidth="310.0" promptText="Type here to search" />
                                <Separator orientation="VERTICAL" prefHeight="30.0" />
                                <Button fx:id="btnreset" mnemonicParsing="false" onAction="#resetTable" prefHeight="38.0" prefWidth="100.0" text="Reset" />
                                <Button fx:id="btnpdf" mnemonicParsing="false" onAction="#exportToPdf" prefHeight="38.0" prefWidth="140.0" text="Export as Pdf" />
                                <Button fx:id="btnexcel" mnemonicParsing="false" onAction="#exportToExcel" prefHeight="38.0" prefWidth="150.0" text="Export to Excel" />
                            </HBox>

                            <!-- Table -->
                            <TableView fx:id="fees_table" prefHeight="250.0">
                                <columns>
                                    <TableColumn fx:id="col_student_id" prefWidth="120.0" text="Student_id" />
                                    <TableColumn fx:id="col_name" prefWidth="200.0" text="Name" />
                                    <TableColumn fx:id="col_date" prefWidth="120.0" text="Date" />
                                    <TableColumn fx:id="col_month" prefWidth="120.0" text="Month" />
                                    <TableColumn fx:id="col_invoice_no" prefWidth="120.0" text="Invoice_no" />
                                    <TableColumn fx:id="col_amount" prefWidth="120.0" text="Amount" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>
                        </VBox>
                    </content>
                    <font>
                        <Font name="Tahoma" size="18.0" />
                    </font>
                </TitledPane>
            </children>
        </VBox>
    </children>
</AnchorPane>